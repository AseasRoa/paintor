    "eslint": "^8.46.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-plugin-jsdoc": "^46.4.6",
    "eslint-plugin-vitest": "^0.2.8",
    "eslint-plugin-vitest-globals": "^1.4.0",
    "jsdom": "^22.1.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vitepress": "^1.0.0-rc.4",
    "vitest": "^0.34.1"
