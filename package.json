  "author": {
    "name": "AseasRoa"
  },
  "description": "Vanilla JavaScript View library for the browser and for the server",
  "homepage": "https://github.com/AseasRoa/paintor",
  "keywords": [
    "view"
  ],
  "license": "MIT",
  "type": "module",
  "types": "./src/types/global.d.ts",
