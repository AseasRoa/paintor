{
  "compilerOptions" : {
    "allowJs"   : true,
    "checkJs"   : true,
    "noEmit"    : true,
    "emitDeclarationOnly": false,
    "lib"       : ["DOM", "ESNext", "DOM.Iterable"],
    "moduleResolution" : "Node",
    "module"    : "ESNext",
    "target"    : "ESNext",
    "strict"    : true,
    "sourceMap" : true,
    "baseUrl"   : ".",
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "outDir": "./lib",
    "types": ["node", "vitest/globals"],
    "paths": {
      "*": ["./src/types/*.d.ts", "./types/*.d.ts"]
    },
    "skipLibCheck": true,
    "allowSyntheticDefaultImports" : true
  },
  "include" : [
    "*.js",
    "src/**/*",
    "dev/**/*",
    "tests/**/*",
    "examples/**/*"
  ],
  "exclude" : [
    "node_modules/**/*",
    "dist/**/*",
    "docs/**/*",
    "types/**/*"
  ]
}
